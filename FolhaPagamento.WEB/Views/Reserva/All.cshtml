@model List<ReservaViewModel>

@{
    ViewData["Title"] = "Reservas";
    var i = 0;
}

@section header {
    <div id="header">
        <div class="d-flex justify-content-between">
            <div class="bg-white w-50">
                <h2 class="display-6 fw-bold ms-5">@ViewData["Title"]</h2>
            </div>
            <div class="d-flex align-items-center bg-grey w-50">
                <a href="@Url.Action("index", "reserva")" class="d-flex align-items-center justify-content-center icon-box h-100">
                    <span class="fs-5">
                        <i class="fa fa-plus"></i>
                    </span>
                </a>
                <a href="@Url.Action("list", "reserva")" class="d-flex align-items-center justify-content-center icon-box h-100 icon-box-active">
                    <span class="fs-5">
                        <i class="fa fa-list-ol"></i>
                    </span>
                </a>
            </div>
        </div>
    </div>
}

<div class="text-start p-5">
    <div class="row">
        <div class="">
            <table class="table table-responsive">
                <thead class="thead-default">
                    <tr>
                        <th>#</th>
                        <th>Responsável</th>
                        <th>Data/Hora</th>
                        <th>Campo/Quadra</th>
                        <th>QTDE Horas</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var reserva in Model)
                    {
                        ++i;
                        <tr>
                            <th scope="row">@i</th>
                            <td>@reserva.Responsavel</td>
                            <td>@reserva.DataReserva</td>
                            <td>@reserva.Espaco</td>
                            <td>@reserva.QtdeHoras</td>
                            <td class="text-right">
                                <div class="dropdown">
                                    <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fa fa-arrow-down" aria-hidden="true"></i>
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                        <li><a class="dropdown-item" href="#">Editar</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("delete", "reserva", new {id = reserva.Id})">Deletar</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
