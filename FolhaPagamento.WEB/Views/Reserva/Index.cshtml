@{
    ViewData["Title"] = "Nova Reserva";
}

@section header {
    <div id="header">
        <div class="d-flex justify-content-between">
            <div class="bg-white w-50">
                <h3 class="text-muted ms-5">@ViewData["Title"]</h3>
            </div>
            <div class="d-flex align-items-center bg-grey w-50">
                <span class="d-flex align-items-center justify-content-center h-100 fs-5 icon-box">
                    <i class="fa fa-plus"></i>
                </span>
                <span class="d-flex align-items-center justify-content-center h-100 fs-5 icon-box">
                    <i class="fa fa-list-ol"></i>
                </span>
            </div>
        </div>
    </div>
}

<div class="text-start p-5">
    <h1 class="display-4">Index de reservas</h1>
</div>
