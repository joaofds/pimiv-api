@{
    ViewData["Title"] = "Listar Folhas de Pagamento";
}

@section header {
    <div id="header">
        <div class="d-flex justify-content-between">
            <div class="bg-white w-50">
                <h2 class="display-6 fw-bold ms-5">@ViewData["Title"]</h2>
            </div>
            <div class="d-flex align-items-center bg-grey w-50">
                <a href="@Url.Action("index", "folhapagamento")" class="d-flex align-items-center justify-content-center icon-box h-100">
                    <span class="fs-5">
                        <i class="fa fa-files-o"></i>
                    </span>
                </a>
                <a href="@Url.Action("all", "folhapagamento")" class="d-flex align-items-center justify-content-center icon-box h-100 icon-box-active">
                    <span class="fs-5">
                        <i class="fa fa-search"></i>
                    </span>
                </a>
            </div>
        </div>
    </div>
}

<div class="text-start p-5">
    <div class="row">
        <div class="col-md-3">
            <form action="" class="">
                <label for="cpf">Buscar CPF</label>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="CPF do colaborador...">
                    <button type="submit" class="input-group-text btn-success"><i class="fa fa-search fa-md"></i></button>
                </div>
            </form>

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-responsive">
                <thead class="thead-default">
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>CPF</th>
                        <th>Referência</th>
                        <th>Data Emissão</th>
                        <th>Valor Pago</th>
                        <th>Ação</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Mark</td>
                        <td>123.456.789-00</td>
                        <td>11/2023</td>
                        <td>08/11/2023</td>
                        <td>6.400,80</td>
                        <td class="text-right">
                            <div class="dropdown">
                                <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="fa fa-arrow-down" aria-hidden="true"></i>
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item" href="#">Ver</a></li>
                                    <li><a class="dropdown-item" href="#">Editar</a></li>
                                    <li><a class="dropdown-item" href="#">Deletar</a></li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
